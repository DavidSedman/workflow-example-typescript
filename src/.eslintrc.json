{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "prettier"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "__testing__/results/",
    "__testing__/coverage/"
  ],
  "rules": {
    "prettier/prettier": "error"
  }
}
